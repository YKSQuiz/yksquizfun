{
  "name": "yks-quiz",
  "version": "1.0.0",
  "description": "YKS Quiz Uygulaması - Türkiye'nin en kapsamlı YKS hazırlık platformu",
  "homepage": "https://www.yksquiz.fun",
  "private": true,
  "author": "YKS Quiz Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@types/node": "^16.18.0",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.7",
    "canvas-confetti": "^1.9.3",
    "firebase": "^11.9.1",
    "firebase-admin": "^13.4.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-icons": "^4.10.1",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "recharts": "^2.15.4",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:prod": "GENERATE_SOURCEMAP=false react-scripts build",
    "build:analyze": "npm run build:prod && npx webpack-bundle-analyzer build/static/js/*.js",
    "build:clean": "rm -rf build && npm run build:prod",
    "build:size": "npm run build:prod && du -sh build/",
    "build:optimize": "npm run build:prod && npm run optimize-images",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prebuild": "echo 'Skipping type-check for now'",
    "postbuild": "echo 'Build completed successfully!'",
    "deploy:staging": "npm run build:prod && echo 'Staging deployment ready'",
    "deploy:production": "npm run build:prod && echo 'Production deployment ready'",
    "db:upload-csv": "node csv-to-firebase.js",
    "db:delete-questions": "node delete-questions.js",
    "db:fix-daily-activity": "node fix-daily-activity-decimals-admin.js",
    "db:fix-session-time": "node fix-session-time-location.js",
    "db:fix-session-times": "node fixSessionTimes.js",
    "db:validate-csv": "node validate-csv.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "prefer-const": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/canvas-confetti": "^1.9.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.0.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "imagemin": "^8.0.0",
    "imagemin-pngquant": "^9.0.0",
    "purgecss": "^5.0.0",
    "critical": "^5.0.0",
    "compression-webpack-plugin": "^10.0.0"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/yksquizv23.git"
  },
  "keywords": [
    "yks",
    "quiz",
    "education",
    "türkiye",
    "üniversite",
    "sınav",
    "react",
    "typescript",
    "firebase"
  ]
}
